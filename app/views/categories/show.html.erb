<h1 class="text-center mt-4 mb-4">Categoria: <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="text-center">
    <%= link_to "Editar o nome da Categoria", edit_category_path(@category), class: "btn btn-outline-secondary btn-lg" %>
  </div>
<% end %>

<div class="flickr_pagination mt-3">
  <%= will_paginate @articles, :container => false %>
</div>
<% if !@category.articles.empty? %>
  <%= render 'articles/articles' %>
<% else %>
  <div class="text-center mt-5 mb-4">
    <h3 class="mb-4">Esta categoria n√£o possui artigos no momento.</h3>
  </div>
<% end %>
<div class="flickr_pagination mb-4">
  <%= will_paginate @articles, :container => false %>
</div>
