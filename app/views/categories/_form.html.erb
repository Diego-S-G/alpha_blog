<%= render 'shared/errors', obj: @category %>

<%= form_with(model: @category, class: "form-partial shadow p-3 mb-3 rounded", local: true) do |form| %>
  <div class="form-group row mb-2">
    <%= form.label :name, "Nome da Categoria", class: "form-label col-form-label-lg  text-light" %> <br>
    
    <div>
      <%= form.text_field :name, class: "form-control form-control-lg shadow rounded", placeholder: "Insira o nome da categoria" %>
    </div>
  </div>
  
  <div class="form-group text-center mt-4">
    <%= form.submit(@category.new_record? ? "Criar Categoria" : "Atualizar Categoria", class: "btn btn-outline-light btn-lg") %>
  </div>
<% end %>