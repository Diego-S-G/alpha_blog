<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      
      <%= form_with(model: @article, class: "form-partial shadow p-3 mb-3 rounded", local: true) do |form| %>
        <div class="form-group row mb-4">
          <%= form.label :title, "Título", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control p-2 shadow rounded", placeholder: "Insira o título aqui" %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, "Descrição", class: "col-2 col-form-label text-light" %> <br>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Insira a descrição aqui" %>
          </div>
        </div>
        
        <div class="form-group text-end mt-3">
          <%= form.submit(@article.new_record? ? "Criar Artigo" : "Atualizar Artigo", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
    <%= link_to "[ Cancelar e voltar para a tela de artigos ]", articles_path, class: "go-back-partial text-center mb-4" %>
  </div>
</div>