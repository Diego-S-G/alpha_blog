<h1>Lista de Artigos</h1>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th colspan='3'>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article|%>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><%= link_to "Ver", article_path(article) %></td>
            <td><%= link_to "Editar", edit_article_path(article) %></td>
            <td><%= link_to "Remover", article_path(article), data: { turbo_method: :delete, "turbo-confirm": "Tem certeza?" } %></td>
        </tr>
        <%end%>
    </tbody>
</table>

<br>
<p>
    <td><%= link_to "Novo Artigo", new_article_path %></td>
    <a href='/'>Home Page</a>
</p>
