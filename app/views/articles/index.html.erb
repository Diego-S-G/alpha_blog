<h1>Lista de Artigos</h1>

<table>
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article|%>
        <tr>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
            <td><a href='/articles/<%= article.id %>'>Ver</a></td>
            <td><a href='/articles/<%= article.id %>/edit'>Atualizar</a></td>
            <td><a href='/'>Remover</a></td>
        </tr>
        <%end%>
    </tbody>
</table>

<br>
<a href='/articles/new'>Novo Artigo</a>
<a href='/'>Home Page</a>
